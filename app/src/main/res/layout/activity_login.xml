<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/darker_gray">

    <Button
        android:id="@+id/donor_button"
        android:layout_width="367dp"
        android:layout_height="50dp"
        android:text="Donor"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.408"
        android:textAlignment="center"/>

    <Button
        android:id="@+id/button5"
        android:layout_width="367dp"
        android:layout_height="50dp"
        android:layout_marginTop="12dp"
        android:text="Non-Profit Organization"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/donor_button"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/donor_button"
        app:layout_constraintTop_toBottomOf="@+id/donor_button"
        app:layout_constraintVertical_bias="0.026"
        android:textAlignment="center"/>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Are you a Donor or a Non-Profit Organization?"
        app:layout_constraintBottom_toTopOf="@+id/donor_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.833"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="@android:color/white"
        android:textAlignment="center"/>

</androidx.constraintlayout.widget.ConstraintLayout>